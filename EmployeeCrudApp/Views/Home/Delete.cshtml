@model Employees
<h2 class="text-danger">Do you really want to delete @Model.Name employee?</h2>

<form action="/home/delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <button type="submit" class="btn btn-danger mt-2">Delete</button>
        <a href="/home" type="submit" class="btn btn-primary mt-2">Cancel</a>
    </div>
</form>
