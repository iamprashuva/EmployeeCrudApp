@model List<Employees>

<a class="btn btn-primary mb-2" href="/home/create">
    <i class="bi bi-plus-lg"></i>
    Add Employee
</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Gender</th>
            <th scope="col">JobTitle</th>
            <th scope="col">HireDate</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Gender</td>
                <td>@employee.JobTitle</td>
                <td>@employee.HireDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
